{% extends 'city/content.html.twig' %}

{% block body %}
    <div class="content-i">
        <div class="content-box">
          {# Tableau 1 #}
            <div class="element-wrapper">
                <img src="{{ asset('build/images/icon/locality.png') }}" alt="locality" class="title-icon" style="margin-bottom: -35px;">
                <h6 class="element-header">
                    Details
                    <a class="btn btn-sm btn-primary float-right" href="{{ path('city_new') }}">
                        <i class="fa fa-plus"></i> Ajouter une ville
                    </a>
                    <a class="btn btn-sm btn-primary float-right kz_back" href="{{ path('city_index') }}">
                        <i class="fa fa-arrow-left"></i> Retour Ã  la liste
                    </a>
                </h6>
                <div class="element-box">
                    <form>
                        <div class="form-group row">
                            <label class="text-uppercase col-form-label col-sm-4">Id</label>
                            <div class="col-sm-8"><input class="form-control" disabled value="{{ city.id }}"></div>
                        </div>
                        <div class="form-group row">
                            <label class="text-uppercase col-form-label col-sm-4">Pays</label>
                            <div class="col-sm-8"><input class="form-control" disabled value="{{ city.region.country.name }}"></div>
                        </div>
                        <div class="form-group row">
                            <label class="text-uppercase col-form-label col-sm-4">Region</label>
                            <div class="col-sm-8"><input class="form-control" disabled value="{{ city.region.name }}"></div>
                        </div>
                        <div class="form-group row">
                            <label class="text-uppercase col-form-label col-sm-4">Name</label>
                            <div class="col-sm-8"><input class="form-control" disabled value="{{ city.name }}"></div>
                        </div>
                        <div class="form-group row">
                            <label class="text-uppercase col-form-label col-sm-4">Capitale</label>
                            <div class="col-sm-8"><input class="form-control" disabled value="{{ (city.isCapital) ? 'Oui' : 'Non' }}"></div>
                        </div>
                    </form>
                    <div class="controls-above-table">
                        <div class="row" id="actions">
                            <div class="col-sm-6">
                                <a class="btn btn-sm btn-primary" href="{{ path('city_edit', {'id': city.id}) }}">
                                    <img src="{{ asset('build/images/icon/edit_16_ba.png') }}" alt="edit"> Modifier</a>
                                <button class="btn btn-sm btn-danger" onclick="deleteElement('{{ path('city_delete', {'id': city.id}) }}')">
                                    <img src="{{ asset('build/images/icon/delete_16_ba.png') }}" alt="delete">Supprimer</button>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
