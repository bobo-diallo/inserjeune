{% extends 'city/content.html.twig' %}

{% block body %}
    <div class="content-i">
        <div class="content-box">
          {# Tableau 1 #}
            <div class="element-wrapper">
                <img src="{{ asset('build/images/icon/locality.png') }}" alt="locality" class="title-icon" style="margin-bottom: -35px;">
                <h6 class="element-header">
                    {{ 'menu.detail' | trans }}
                    <a class="btn btn-sm btn-primary float-right" href="{{ path('city_new') }}">
                        <i class="fa fa-plus"></i> {{ 'city.add_city' | trans }}
                    </a>
                    <a class="btn btn-sm btn-primary float-right kz_back" href="{{ path('city_index') }}">
                        <i class="fa fa-arrow-left"></i> {{ 'menu.back_to_the_list' | trans }}
                    </a>
                </h6>
                <div class="element-box">
                    <form>
                        <div class="form-group row">
                            <label class="text-uppercase col-form-label col-sm-4">Id</label>
                            <div class="col-sm-8"><input class="form-control" disabled value="{{ city.id }}"></div>
                        </div>
                        <div class="form-group row">
                            <label class="text-uppercase col-form-label col-sm-4"> {{ 'menu.country' | trans }} </label>
                            <div class="col-sm-8"><input class="form-control" disabled value="{{ city.region.country.name | trans}}"></div>
                        </div>
                        <div class="form-group row">
                            <label class="text-uppercase col-form-label col-sm-4"> {{ 'menu.region' | trans }} </label>
                            <div class="col-sm-8"><input class="form-control" disabled value="{{ city.region.name | trans}}"></div>
                        </div>
                        {%  if prefecture_between_region_city == "true" %}
                            {% if city.prefecture %}
                                <div class="form-group row">
                                    <label class="text-uppercase col-form-label col-sm-4"> {{ 'menu.prefecture' | trans }} </label>
                                    <div class="col-sm-8"><input class="form-control" disabled value="{{ city.prefecture.name | trans}}"></div>
                                </div>
                            {% endif %}
                        {% endif %}
                        <div class="form-group row">
                            <label class="text-uppercase col-form-label col-sm-4">{{ 'menu.name' | trans }}</label>
                            <div class="col-sm-8"><input class="form-control" disabled value="{{ city.name | trans }}"></div>
                        </div>
                        <div class="form-group row">
                            <label class="text-uppercase col-form-label col-sm-4">{{ 'city.capital_city' | trans }}</label>
                            <div class="col-sm-8"><input class="form-control" disabled value="{{ (city.isCapital) ? 'Oui' : 'Non' }}"></div>
                        </div>
                        {%  if prefecture_between_region_city == "true" %}
                            <div class="form-group row">
                                <label class="text-uppercase col-form-label col-sm-4">{{ 'city.prefecture_capital_city' | trans }}</label>
                                <div class="col-sm-8"><input class="form-control" disabled value="{{ (city.isPrefectureCapital) ? 'Oui' : 'Non' }}"></div>
                            </div>
                        {% endif %}
                    </form>
                    <div class="controls-above-table">
                        <div class="row" id="actions">
                            <div class="col-sm-6">
                                <a class="btn btn-sm btn-primary" href="{{ path('city_edit', {'id': city.id}) }}">
                                    <img src="{{ asset('build/images/icon/edit_16_ba.png') }}" alt="edit"> {{ 'menu.edit' | trans }}</a>
                                <button class="btn btn-sm btn-danger" onclick="deleteElement('{{ path('city_delete', {'id': city.id}) }}')">
                                    <img src="{{ asset('build/images/icon/delete_16_ba.png') }}" alt="delete">{{ 'menu.delete' | trans }}</button>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
