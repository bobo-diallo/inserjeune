{% extends 'school/content.html.twig' %}

{% block referencement_h1 %}
    {{ parent() }}  {{ 'referencement.school_profile' | trans }}
{% endblock %}

{% block body %}
    <div class="content-i">
        <div class="content-box">
            {# Tableau 1 #}
            <div class="element-wrapper">
                <img src="{{ asset('build/images/icon/company.png') }}" alt="locality" class="title-icon" style="margin-bottom: -35px;">
                <h6 class="element-header">
                    {{ 'school.editing_of_an_establishment' | trans }}
                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="btn btn-sm btn-primary float-right" href="{{ path('school_index') }}">
                            <i class="fa fa-arrow-left"></i> {{ 'menu.back_to_the_list' | trans }}
                        </a>
                    {% endif %}
                </h6>
                <div class="element-box">
                    <form id="form_school" id="formValidate" method="post">
                        {% include 'school/_new.html.twig' with {'form': edit_form} %}
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
