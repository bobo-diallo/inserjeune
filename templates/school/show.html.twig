{% extends 'school/content.html.twig' %}

{% block referencement_h1 %}
    {{ parent() }}  {{ 'referencement.school_profile' | trans }}
{% endblock %}

{% block body %}
    <div class="content-i">
        <div class="content-box">
          {# Tableau 1 #}
            <div class="element-wrapper">
                <h6 class="element-header">
                    {{ 'menu.detail' | trans }}
                    <a class="btn btn-sm btn-primary float-right" href="{{ path('school_index') }}">
                        <i class="fa fa-arrow-left"></i> {{ 'menu.back_to_the_list' | trans }}
                    </a>
                </h6>
                <div class="element-box form-show">
                    <fieldset>
                        <legend><span> {{ 'menu.identity' | trans }} </span></legend>
                        <div class="row">
                            <div class="form-group col-sm-6">
                                <label for=""> Type: </label>
                                <input class="form-control" disabled value="{{ school.type | trans }}">
                            </div>
                            <div class="form-group col-sm-6">
                                <label for=""> {{ 'menu.name' | trans }} : </label>
                                <input class="form-control" disabled value="{{ school.name }}">
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-6">
                                <label for=""> {{ 'menu.registration' | trans }}:</label>
                                <input class="form-control" disabled value="{{ school.registration }}">
                            </div>
                            <div class="form-group col-sm-6">
                                <label for=""> {{ 'menu.created_date' | trans }} :</label>
                                <input class="form-control" disabled value="{{ school.createdDate|date('d/m/Y H:i') }}">
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-sm-12">
                                <label for=""> {{ 'menu.description' | trans }} : </label>
                                <textarea class="form-control" disabled >{{ school.description }}</textarea>
                            </div>
                        </div>
                    </fieldset>

                    <fieldset>
                        <legend><span> {{ 'menu.address' | trans }} </span></legend>
                        <div class="row">
                            <div class="form-group col-sm-4">
                                <label for=""> {{ 'menu.country' | trans }} : </label>
                                <input class="form-control" disabled value="{{ school.country | trans }}">
                            </div>
                            <div class="form-group col-sm-4">
                                <label for=""> {{ 'menu.region' | trans }} : </label>
                                <input class="form-control" disabled value="{{ school.region | trans  }}">
                            </div>
                            <div class="form-group col-sm-4">
                                <label for=""> {{ 'menu.city' | trans }}: </label>
                                {% if school.city %}
                                    <input class="form-control" disabled value="{{ school.city.name | trans  }}">
                                {% else %}
                                    <input class="form-control" disabled value="">
                                {% endif %}
                            </div>
                        </div>
                        <div class="row">
                            {%  if concat_local_address == "false" %}
                                <div class="form-group col-sm-4">
                                    <label for=""> {{ 'menu.number' | trans }}: </label>
                                    <input class="form-control" disabled value="{{ school.addressNumber }}">
                                </div>
                                <div class="form-group col-sm-4">
                                    <label for=""> {{ 'menu.street' | trans }} : </label>
                                    <input class="form-control" disabled value="{{ school.addressRoad }}">
                                </div>
                                <div class="form-group col-sm-4">
                                    <label for=""> {{ 'menu.location' | trans }} : </label>
                                    <input class="form-control" disabled value="{{ school.addressLocality }}">
                                </div>
                            {% else %}
                                <div class="form-group col-sm-12">
                                    <label for=""> {{ 'menu.location' | trans }} : </label>
                                    <input class="form-control" disabled value="{{ school.addressLocality }}">
                                </div>
                            {% endif %}
                        </div>
                    </fieldset>
                    <fieldset>
                        <legend><span>{{ 'menu.contact' | trans }}</span></legend>
                        <div class="row">
                            <div class="form-group col-sm-4">
                                <label for=""> {{ 'menu.connection_phone_country_code_number' | trans }} </label>
                                <input class="form-control" disabled value="{{ school.phoneStandard }}">
                            </div>
                            <div class="form-group col-sm-4">
                                <label for=""> {{ 'menu.other_phone_country_code_number' | trans }} </label>
                                <input class="form-control" disabled value="{{ school.phoneOther }}">
                            </div>
                            <div class="form-group col-sm-4">
                                <label for=""> Email</label>
                                <input class="form-control" disabled value="{{ school.email }}">
                            </div>
                        </div>
                    </fieldset>
                    <fieldset>
                        <legend><span>{{ 'school.proposed_certificates_degrees' | trans }} </span></legend>
                        <div class="row">
                            <div class="form-group col-sm-6">
{#                                <textarea class="form-control" disabled style="height: 120px">{{ school.degrees | join('\n')}}</textarea>#}
                                <textarea class="form-control" disabled style="height: 120px">{{ school.degrees | trans_table_format }}</textarea>
                            </div>
                            <div class="hide_flex_otherDegree col-sm-6">
                                <div class="form-group col-sm-12" style="padding: 0">
                                    <label for="">  {{ 'menu.other_degree' | trans }}s ({{ 'school.other_degree_separated_by_a_comma_if_more_than_one' | trans }}) </label>
                                    <input class="form-control" disabled value="{{ school.otherDegree }}">
                                </div>
                            </div>
                        </div>
                    </fieldset>
                    <fieldset>
                        <legend><span>{{ 'school.training_offers_1_sector_minimum_and_6_maximum' | trans  }}</span></legend>
                        <div class="row">
                          {# Secteur d'activité 1 #}
                            <div class="col-sm-6 form-group">
                                <div class="row" style="margin:0">
                                    <div class="col-sm-12 form-group without-margin without-padding">
                                        <label for=""> {{ 'menu.activity_area' | trans }} 1</label>
                                        <input class="form-control" disabled value="{{ school.sectorArea1 | trans }}">
                                    </div>
                                    <div class="col-sm-12 form-group without-padding hide_flex_otherActivity1">
                                        <label for=""> {{'activity.other_sector_profession' | trans }}</label>
                                        <input class="form-control" disabled value="{{ school.otherActivity1 }}">
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6 form-group">
                                <label for=""> {{'menu.faculty' | trans }}s </label>
                                {%  set act = ""  %}
                                {% for activity in school.activities1 %}
                                    {%  set act = act ~ '\n' ~ activity  | trans   %}
                                {% endfor %}
                                <textarea class="form-control" disabled style="height: 120px">{{ act }}</textarea>
                            </div>
                        </div>
