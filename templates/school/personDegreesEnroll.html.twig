    <script>
        function addRowPersonDegree(assetLocationIcon) {
            let rowNumber = $('#rowNumber').val();
            rowNumber++;
            $('#rowNumber').val(rowNumber);
            let colorBack = "odd";

            let html = '<tr class="enrollpersondegree ' + colorBack + '" id="personDegree' + rowNumber + '" role="row">';
            html += '    <td class="row-actions sorting_1">';
            html += '        <span style="display: none" >undefined</span>';
            html += '        <button id="edit' + rowNumber + '" onclick="displayButton(\'edit\',' + rowNumber + ')"><img src="' + assetLocationIcon + 'edit_16.png"></button>';
            html += '        <button style="display: none"  id="remove' + rowNumber + '" onclick="displayButton(\'remove\',' + rowNumber + ')"><img src="' + assetLocationIcon + 'delete.png"></button>';
            html += '        <button style="display: none"  id="save' + rowNumber + '" onclick="displayButton(\'save\',' + rowNumber + ')"><img src="' + assetLocationIcon + 'save_16.png"></button>';
            html += '        <button style="display: none"  id="cancel' + rowNumber + '" onclick="displayButton(\'cancel\',' + rowNumber + ')"><img src="' + assetLocationIcon + 'cancel_16.png"></button>';
            html += '    </td>';
            html += '    <td><input id="registrationStudentSchool' + rowNumber + '" style="display:none" value="1234"><p>1234</p></td>';
            html += '    <td><input id="firstname' + rowNumber + '" style="display:none" value="mon prénom"><p>mon prénom</p></td>';
            html += '    <td><input id="lastname' + rowNumber + '" style="display:none" value="mon nom"><p>mon nom</p></td>';

            html += '    <td><input id="birthDate' + rowNumber + '" type="Date" style="display:none" value="2022-10-14"><p>22-10-2022</p></td>';

            html += '    <td><input id="sex' + rowNumber + '" style="display:none" value="un homme"><p>un homme</p></td>';
            html += '    <td><input id="region' + rowNumber + '" style="display:none" value="Thiès"><p>Thiès</p></td>';
            html += '    <td><input id="city' + rowNumber + '" style="display:none" value="Thiès"><p>Thiès</p></td>';
            html += '    <td><input id="phoneMobile1' + rowNumber + '" style="display:none" value="+221444440292"<p>+221444440292</p></td>';
            html += '    <td><input id="phoneMobile2' + rowNumber + '" style="display:none" value="+221444440299"><p>+221444440299</p></td>';
            html += '    <td><input id="email' + rowNumber + '" style="display:none" value="monemail@mail.com"><p>monemail@mail.com</p></td>';
            html += '    <td><input id="degree' + rowNumber + '" style="display:none" value="Brevet de Technicien (BT)"><p>Brevet de Technicien (BT)</p></td>';
            html += '    <td><input id="sectorarea' + rowNumber + '" style="display:none" value="CONSTRUCTION, BÂTIMENT ET TRAVAUX PUBLICS"><p>CONSTRUCTION, BÂTIMENT ET TRAVAUX PUBLICS</p></td>';
            html += '    <td><input id="activity' + rowNumber + '" style="display:none" value="Electricité bâtiment"><p>Electricité bâtiment</p></td>';

            html += '</tr>';

            $('#tbodyPersonDegree').append(html);
            let idtest = "#edit" + rowNumber;
            $(idtest).addClass("editPersonDegree");
        }

        function displayButton(action, rowNumber) {
            let save = "#save" + rowNumber;
            let cancel = "#cancel" + rowNumber;
            let edit = "#edit" + rowNumber;
            let remove = "#remove" + rowNumber;

            /* récupération de l'id du diplômé si existant */
            personDegreeId = $("#id" + rowNumber).text();

            /* Affichage des buttons */
            /* --------------------- */
            if (action == "edit") {
                $(save).css("display", "inline-block");
                $(cancel).css("display", "inline-block");
                $(edit).css("display", "none");
                $(remove).css("display", "none");
            } else if ((action == "save") || (action == "cancel")) {
                $(save).css("display", "none");
                $(cancel).css("display", "none");
                $(edit).css("display", "inline-block");
                if (personDegreeId)
                    $(remove).css("display", "inline-block");
            }
            /* Affichage des inputs et des p */
            /* ----------------------------- */
            row = $(edit).attr('id').replace("edit", "#personDegree");
            //console.log(row);
            $(row).each(function () {
                if (action == "edit") {
                    $(this).find('input').each(function () {
                        $(this).css("display", "inline-block");
                    });
                    $(this).find('p').each(function () {
                        $(this).css("display", "none");
                    });
                } else if ((action == "save") || (action == "cancel")) {
                    $(this).find('input').each(function () {
                        $(this).css("display", "none");
                    });
                    $(this).find('p').each(function () {
                        $(this).css("display", "inline-block");
                    });
                }
            });

            /* Appels Ajax pour la sauvegarde et la suppression  */
            /* ------------------------------------------------- */
            if (action == "save") {
                if (confirm("Etes vous sûr de modifier cette entrée ?")) {
                    /* creation de la table des données */
                    /* -------------------------------- */
                    let personDegree = [];
                    //console.log("row=" + row);
                    personDegree = {};

                    /* récupération de l'id du diplômé si existant */
                    personDegree["id"] = $("#id" + rowNumber).text();

                    /* récupération des données saisies dans les inputs */
                    /*------------------------------------------------- */
                    $(row).each(function () {
                        $(this).find('input').each(function () {
                            /*récupération du Label en enlevant le numero du rowNumber */
                            let nbDigitsRowNumber = rowNumber.toString().length;

                            let inputLabel = $(this).attr('id');
                            inputLabel = inputLabel.substring(0, inputLabel.length - nbDigitsRowNumber);
                            //console.log(inputLabel + " | " + nbDigitsRowNumber + " | " + rowNumber);

                            personDegree[inputLabel] = $(this).val();
                        });
                    });

                    console.log(personDegree)

                    /* appel ajax en get pour sauvegarder le Diplômé */
                    /* --------------------------------------------- */
                    data = {"test1": "toto", "test2": "tata"};
                    let dirs = window.location.href.split('/');
                    let $locationRef = "";
                    for (let i = 0; i < dirs.length - 1; i++)
                        $locationRef += dirs[i] + '/';
                    console.log($locationRef + 'personDegreeUpdateAjax');

                    $.get($locationRef + 'personDegreeUpdateAjax/', data).done(function (res) {
                        console.log(res)
                        /*
                         FONCTION A REALISER:
                         ENVOYER LES DONNEES AU SERVEUR
                         SI ID EST NULL : CREER LE DIPLOMé
                         SI ID EST NON NULL : UPDATE DIPLOMé
                         METTRE 0 JOUR LES <P> de LA TABLE AVEC LES VALEURS DE LA REPONSE JSON (DIPLOMé)
                         ATTENTION, METTRE A JOUR L'ID
                         */
                    }, "json");
                }

            } else if (action == "remove") {
                if (confirm("Etes vous sûr de supprimer cette entrée ?")) {
                    /* creation de la table des données */
                    /* -------------------------------- */
                    let personDegree = [];
                    personDegree = {};

                    /* récupération de l'id du diplômé si existant */
                    personDegreeId = $("#id" + rowNumber).text();

                    if (personDegreeId) {
                        $.get($locationRef + 'personDegreeDeleteAjax/', personDegreeId).done(function (res) {
                            console.log(res)
                            /*
                             FONCTION A REALISER:
                             ENVOYER L'ID DU DIPLOMé A SUPPRIMER
                             SI DIPLOMé SUPPRIMé (REPONSE AJAX), SUPPRIMER LIGNE DANS LA TABLE
                             */
                        }, "json");
                    }
                }
            }
        }
    </script>
{% endblock %}

