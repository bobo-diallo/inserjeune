{% extends 'currency/content.html.twig' %}

{% block body %}
    <div class="content-i">
        <div class="content-box">
          {# Tableau 1 #}
            <div class="element-wrapper">
                <img src="{{ asset('build/images/icon/locality.png') }}" alt="devises" class="title-icon" style="margin-bottom: -35px;">
                <h6 class="element-header">
                    {{ 'currency.editing_a_currency' | trans }}
                    <a class="btn btn-sm btn-primary float-right" href="{{ path('currency_new') }}">
                        <i class="fa fa-plus"></i> {{ 'currency.add_a_currency' | trans }}
                    </a>
                    <a class="btn btn-sm btn-primary float-right kz_back" href="{{ path('currency_index') }}">
                        <i class="fa fa-arrow-left"></i> {{ 'menu.back_to_the_list' | trans }}
                    </a>
                </h6>
                <div class="element-box">
                    <form id="formValidate" method="post">
                      {% include 'currency/_new.html.twig' with {'form': edit_form} %}
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
