{% extends 'country/content.html.twig' %}

{% block body %}
    <div class="content-i">
        <div class="content-box">
          {# Tableau 1 #}
            <div class="element-wrapper">
                <img src="{{ asset('build/images/icon/locality.png') }}" alt="locality" class="title-icon" style="margin-bottom: -35px;">
                <h6 class="element-header">
                    Details
                    <a class="btn btn-sm btn-primary float-right" href="{{ path('country_new') }}">
                        <i class="fa fa-plus"></i> Ajouter un pays
                    </a>
                    <a class="btn btn-sm btn-primary float-right kz_back" href="{{ path('country_index') }}">
                        <i class="fa fa-arrow-left"></i> Retour Ã  la liste
                    </a>
                </h6>
                <div class="element-box">
                    <form>
                        <div class="form-group row">
                            <label class="text-uppercase col-form-label col-sm-4">Id</label>
                            <div class="col-sm-8"><input class="form-control" disabled value="{{ country.id }}"></div>
                        </div>
                        <div class="form-group row">
                            <label class="text-uppercase col-form-label col-sm-4">Name</label>
                            <div class="col-sm-8"><input class="form-control" disabled value="{{ country.name }}"></div>
                        </div>
                        <div class="form-group row">
                            <label class="text-uppercase col-form-label col-sm-4">Code ISO</label>
                            <div class="col-sm-8"><input class="form-control" disabled value="{{ country.isoCode }}"></div>
                        </div>
                        <div class="form-group row">
                            <label class="text-uppercase col-form-label col-sm-4">Devise</label>
                            <div class="col-sm-8"><input class="form-control" disabled value="{{ country.currency }}"></div>
                        </div>
                        <div class="form-group row">
                            <label class="text-uppercase col-form-label col-sm-4">Ind. T&eacute;l.</label>
                            <div class="col-sm-8"><input class="form-control" disabled value="{{ country.phoneCode }}"></div>
                        </div>
                        <div class="form-group row">
                            <label class="text-uppercase col-form-label col-sm-4">Valide</label>
                            <div class="col-sm-8"><input class="form-control" disabled value="{{ country.valid }}"></div>
                        </div>
                    </form>
                    <div class="controls-above-table">
                        <div class="row" id="actions">
                            <div class="col-sm-6">
                                <a class="btn btn-sm btn-primary" href="{{ path('country_edit', {'id': country.id}) }}">
                                    <img src="{{ asset('build/images/icon/edit_16_ba.png') }}" alt="edit"> Modifier</a>
                                <button class="btn btn-sm btn-danger" onclick="deleteElement('{{ path('country_delete', {'id': country.id}) }}')">
                                    <img src="{{ asset('build/images/icon/delete_16_ba.png') }}" alt="delete">Supprimer</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block js %}
    <script>
       $('#actions form').css('display', 'inline-block');
    </script>
{% endblock %}
