{% extends 'omissionreason/content.html.twig' %}

{% block body %}
    <div class="content-i">
        <div class="content-box">
          {# Tableau 1 #}
            <div class="element-wrapper">
                <h6 class="element-header">
                    Lacunes des employ√©s
                  {#{% include '_menu.html.twig' %}#}
                </h6>
                <div class="element-box">
                    <div class="controls-above-table">
                        <div class="row">
                            <div class="col-sm-6">
                                <a class="btn btn-sm btn-primary" href="#">Export CSV</a>
                                <a class="btn btn-sm btn-primary" href="#">Archiver</a>
                                <a class="btn btn-sm btn-primary" href="{{ path('omissionreason_new') }}">
                                    <i class="fa fa-plus"></i> ajouter une raison</a>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table id="kz_table" class="table table-bordered dt-responsive nowrap" style="width:100%">
