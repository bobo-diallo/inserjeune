                                <th >Actions</th>
                                <th><div><span>Id</span></div></th>
                                <th><div><span>Raison</span></div></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for reason in omissionReasons %}
                                <tr>
                                    <td class="row-actions">
                                        <a href="{{ path('omissionreason_edit', { 'id': reason.id }) }}#"><img src="{{ asset('build/images/icon/edit_16.png') }}" alt="edit"></a>
                                        <a href="{{ path('omissionreason_show', { 'id': reason.id }) }}"><img src="{{ asset('build/images/icon/show_16.png') }}" alt="show"></a>
                                        <a class="danger" href="#"><img src="{{ asset('build/images/icon/delete_16.png') }}" alt="delete"></a>
                                    </td>
                                    <td><a href="{{ path('omissionreason_show', { 'id': reason.id }) }}">{{ reason.id }}</a></td>
                                    <td>{{ reason.name }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


