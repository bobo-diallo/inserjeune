{% extends 'omissionreason/content.html.twig' %}

{% block body %}
    <div class="content-i">
        <div class="content-box">
          {# Tableau 1 #}
            <div class="element-wrapper">
                <h6 class="element-header">
                    {{ 'menu.detail' | trans }}
                    <a class="btn btn-sm btn-primary float-right" href="{{ path('omissionreason_new') }}">
                        <i class="fa fa-plus"></i> {{ 'company.add_a_deficiency' | trans }}
                    </a>
                    <a class="btn btn-sm btn-primary float-right kz_back" href="{{ path('omissionreason_index') }}">
                        <i class="fa fa-arrow-left"></i> {{ 'menu.back_to_the_list' | trans }}
                    </a>
                </h6>
                <div class="element-box">
                    <form>
                        <div class="form-group row">
                            <label class="text-uppercase col-form-label col-sm-4">Id</label>
                            <div class="col-sm-8"><input class="form-control" disabled value="{{ omissionReason.id }}"></div>
                        </div>
                        <div class="form-group row">
                            <label class="text-uppercase col-form-label col-sm-4">{{ 'menu.name' | trans }}</label>
                            <div class="col-sm-8"><input class="form-control" disabled value="{{ omissionReason.name }}"></div>
                        </div>
                    </form>
                    <div class="controls-above-table">
                        <div class="row" id="actions">
                            <div class="col-sm-6">
                                <a class="btn btn-sm btn-primary" href="{{ path('omissionreason_edit', {'id': omissionReason.id}) }}">
                                    <i class="fa fa-edit" aria-hidden="true"></i> {{ 'menu.edit' | trans }}</a>
                              {{ form_start(delete_form) }}
                                <button class="btn btn-sm btn-danger" type="sumbit">
                                    <i class="os-icon os-icon-database-remove" aria-hidden="true"></i>{{ 'menu.delete' | trans }}</button>
                              {{ form_end(delete_form) }}

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
