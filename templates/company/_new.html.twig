  {%  if selectedCountry is not null %}
    <option value="{{ selectedCountry.id }}">{{ selectedCountry.name | trans }}</option>
  {%  endif %}
</select>

{% if struct_province_country_city == "true" %}
  {% if company.region is not null %}
    <input style="display: none" value="{{ company.region.phoneCode }}" id="countryPhoneCode">
  {% endif %}
{% else %}
  {% if company.country is not null %}
    <input style="display: none" value="{{ company.country.phoneCode }}" id="countryPhoneCode">
  {% endif %}
{% endif %}

{% if company is not null and company.city is not null %}
