{% extends 'region/content.html.twig' %}

{% block body %}
    <div class="content-i">
        <div class="content-box">
          {# Tableau 1 #}
            <div class="element-wrapper">
                <img src="{{ asset('build/images/icon/locality.png') }}" alt="locality" class="title-icon" style="margin-bottom: -35px;">
                <h6 class="element-header">
                    {{ 'menu.detail' | trans }}
                    <a class="btn btn-sm btn-primary float-right" href="{{ path('region_new') }}">
                        <i class="fa fa-plus"></i> {{ 'region.add_a_region' | trans }}
                    </a>
                    <a class="btn btn-sm btn-primary float-right kz_back" href="{{ path('region_index') }}">
                        <i class="fa fa-arrow-left"></i> {{ 'menu.back_to_the_list' | trans }}
                    </a>
                </h6>
                <div class="element-box">
                    <form>
                        <div class="form-group row">
                            <label class="text-uppercase col-form-label col-sm-4">Id</label>
                            <div class="col-sm-8"><input class="form-control" disabled value="{{ region.id }}"></div>
                        </div>
                        <div class="form-group row">
                            <label class="text-uppercase col-form-label col-sm-4">Name</label>
                            <div class="col-sm-8"><input class="form-control" disabled value="{{ region.name | trans }}"></div>
                        </div>
                        <div class="form-group row">
                            <label class="text-uppercase col-form-label col-sm-4"> {{ 'menu.country' | trans }} </label>
                            <div class="col-sm-8"><input class="form-control" disabled value="{{ region.country.name | trans }}"></div>
                        </div>
                        {# adaptation DBTA #}
                        {% if struct_province_country_city == 'true' %}
                            <div class="form-group row">
                                <label class="text-uppercase col-form-label col-sm-4">{{ 'currency.iso_code' | trans }}</label>
                                <div class="col-sm-8"><input class="form-control" disabled value="{{ region.isoCode }}"></div>
                            </div>
                            <div class="form-group row">
                                <label class="text-uppercase col-form-label col-sm-4"> {{ 'menu.currency' | trans }} </label>
                                <div class="col-sm-8"><input class="form-control" disabled value="{{ region.currency | trans}}"></div>
                            </div>
                            <div class="form-group row">
                                <label class="text-uppercase col-form-label col-sm-4"> {{ 'menu.phone_indicator' | trans }} .</label>
                                <div class="col-sm-8"><input class="form-control" disabled value="{{ region.phoneCode }}"></div>
                            </div>
                            <div class="form-group row">
                                <label class="text-uppercase col-form-label col-sm-4"> {{ 'menu.valid' | trans }} </label>
                                <div class="col-sm-8"><input class="form-control" disabled value="{{ region.valid }}"></div>
                            </div>
                        {% endif %}
                    </form>
                    <div class="controls-above-table">
                        <div class="row" id="actions">
                            <div class="col-sm-6">
                                <a class="btn btn-sm btn-primary" href="{{ path('region_edit', {'id': region.id}) }}">
                                    <img src="{{ asset('build/images/icon/edit_16_ba.png') }}" alt="edit"> {{ 'menu.edit' | trans }}</a>
                                <button class="btn btn-sm btn-danger" onclick="deleteElement('{{ path('region_delete', {'id': region.id}) }}')">
                                    <img src="{{ asset('build/images/icon/delete_16_ba.png') }}" alt="delete">{{ 'menu.delete' | trans }}</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
