{% extends 'degree/content.html.twig' %}

{% block body %}
    <div class="content-i">
        <div class="content-box">
          {# Tableau 1 #}
            <div class="element-wrapper">
                <img src="{{ asset('build/images/icon/certificate.png') }}" alt="locality" class="title-icon" style="margin-bottom: -35px;">
                <h6 class="element-header">
                    Details
                    <a class="btn btn-sm btn-primary float-right" href="{{ path('degree_index') }}">
                        <i class="fa fa-arrow-left"></i> Retour à la liste
                    </a>
                </h6>
                <div class="element-box">
                    <form>
                        <div class="form-group row">
                            <label class="text-uppercase col-form-label col-sm-4">Id</label>
                            <div class="col-sm-8"><input class="form-control" disabled value="{{ degree.id }}"></div>
                        </div>
                        <div class="form-group row">
                            <label class="text-uppercase col-form-label col-sm-4">Name</label>
                            <div class="col-sm-8"><input class="form-control" disabled value="{{ degree.name }}"></div>
                        </div>
                        <div class="form-group row">
                            <label class="text-uppercase col-form-label col-sm-4">Description</label>
                            <div class="col-sm-8"><input class="form-control" disabled value="{{ degree.description }}"></div>
                        </div>
                        <div class="form-group row">
                            <label class="text-uppercase col-form-label col-sm-4">Niveau</label>
                            <div class="col-sm-8"><input class="form-control" disabled value="{{ degree.level }}"></div>
                        </div>
                        {% if degree.activity is not null %}
                            <div class="form-group row">
                                <label class="text-uppercase col-form-label col-sm-4">Secteur d'activité</label>
                                <div class="col-sm-8"><input class="form-control" disabled value="{{ degree.activity.name }}"></div>
                            </div>
                        {% endif %}
                    </form>
                    <div class="controls-above-table">
                        <div class="row" id="actions">
                            <div class="col-sm-6">
                                <a class="btn btn-sm btn-primary" href="{{ path('degree_edit', {'id': degree.id}) }}">
                                    <img src="{{ asset('build/images/icon/edit_16_ba.png') }}" alt="edit"> Modifier</a>
                                <button class="btn btn-sm btn-danger" onclick="deleteElement('{{ path('degree_delete', {'id': degree.id}) }}')">
                                    <img src="{{ asset('build/images/icon/delete_16_ba.png') }}" alt="delete">Supprimer</button>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block js %}
    <script>
       $('#actions form').css('display', 'inline-block');
    </script>
{% endblock %}
